@import "../i-block/i-block.interface.styl"

$bImageEditor = ()
declare($bImageEditor, b-image-editor)

if file-exists("b-image-editor_*.styl")
	@import "b-image-editor_*.styl"

b-image-editor($p)
	$p = assign({}, $p)

	+cache()
		extends($iBlock)

		&__root-wrapper
			display flex
			justify-content center
			align-items center

		&__super-wrapper
			position relative
			display inline-block

		&__img
			max-width 100%

		&__wrapper
			absolute top 0 left 0
			z-index 1
			display none
			width 100%
			height 100%
			background rgba(#111, 0.7)

		&__info-cell
			align-self center

		&__progress
			display inline-block
			color #FFF

		&_progress_true &__super-wrapper
			display block

		&_progress_true &__wrapper
			display flex
			justify-content center
			flex-direction column

		&_progress_true &__wrapper + &__controls
			display none

		&__controls
			$padding = 0.4em
			absolute bottom ($padding / 2) right 0
			z-index 2
			display flex
			justify-content flex-end
			padding 0.2em $padding
			color #FFF

		&__action
			margin-left 0.3em
			text-shadow 1px 1px rgba(#000, 0.3)
			cursor pointer
			$hoverColor = #008FCA

			&:hover
				color $hoverColor

			&:active
				color lighten($hoverColor, 20%)

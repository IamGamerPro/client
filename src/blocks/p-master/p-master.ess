- include '../i-page/i-page.interface.ss' as placeholder

- template index(params) extends ['i-page.interface'].index
	- block libs
		- super
		? libs.push( &
			'URIjs/src/URI.min.js',
			'page/page.js'
		) .

	- block body
		- super
		< .&__cont
			< b-router
			< header.&__header
				< b-background.&__header-back :mods = {theme: 'metallic'} | :name = 'header'
					< b-exit
					< b-logo :mods = {theme: 'dark'}
					< b-header-top-nav :value = [ &
						{
							text: '`Новости сети`',
							marked: true,
							href: '/kobezzza/options'
						},

						{
							text: '`Рейтинг кланов`',
							href: '#'
						},

						{
							text: '`Рейтинг игр`',
							href: '#'
						}
					] .

					< b-header-nav :value = [ &
						{
							text: '`Моя страница`',
							active: page === 'p-profile',
							href: '#'
						},

						{
							text: '`Сообщения`',
							active: page === 'p-pm',
							href: '#'
						},

						{
							text: '`Друзья`',
							active: page === 'p-friends',
							href: '#'
						},

						{
							text: '`Скрины`',
							active: page === 'p-photos',
							href: '#'
						},

						{
							text: '`Кланы`',
							active: page === 'p-clans',
							href: '#'
						}
					] .

			< component :is = page

		< footer.&__cont
			< .&__copyright
				IamGamer.pro (c) {new Date().getFullYear()}

declare($obj, $name)
	push($obj, $name)

extends($obj, $params = {})
	for $el in $obj
		{$el} ($params)

assign($src, $objs...)
	for $obj in $objs
		for $key, $el in $obj
			$src[$key] = $el
	$src

$iBase = ()
declare($iBase, i-base)

if file-exists("i-base_*.styl")
	@import "i-base_*.styl"

i-base($p)
	$p = assign({}, $p)

	+cache($p)
		font-family "Helvetica Neue", Helvetica, Arial, sans-serif

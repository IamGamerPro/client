@import "../i-block/i-block.interface.styl"

$bProgress = ()
declare($bProgress, b-progress)

if file-exists("b-progress_*.styl")
	@import "b-progress_*.styl"

b-progress($p)
	$p = assign({
		color: rgba(#FFF, 0.9),
		gradColor1: rgba(#FFBE00, 0.5),
		gradColor2: rgba(#FEB645, 0.95),
		width: 10em,
		height: 0.5em,
		pointWidth: 1px
	}, $p)

	$color = $p.color
	$gradColor1 = $p.gradColor1
	$gradColor2 = $p.gradColor2
	$width = $p.width
	$height = $p.height
	$pointWidth = $p.pointWidth

	+cache()
		extends($iBlock)

		&_progress_true &__progress
			display block
			width $width
			height $height
			border 0.1em $color solid
			border-radius 2px

		&__line,
		&__point
			height 100%

		&__line
			box-shadow 1px 0 3px rgba($color, 0.2)
			background linear-gradient(to right, $gradColor1 0, $gradColor2 100%)
			transition width 0.5s

		&__point
			float right
			width $pointWidth
			background $color

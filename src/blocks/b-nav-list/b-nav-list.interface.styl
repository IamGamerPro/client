@import "../i-data/i-data.interface.styl"
@import "../b-progress-icon/b-progress-icon.interface.styl"

$bNavList = ()
declare($bNavList, b-nav-list)

if file-exists("b-nav-list_*.styl")
	@import "b-nav-list_*.styl"

b-nav-list($p)
	$p = assign({}, $p)

	+cache()
		extends($iData)

		&__wrapper,
		&__link
			display flex
			align-items center

		&__el + &__el
			margin-left 0.5em

		&__link_progress_true &__link-progress
			display block

		&__cell + &__cell
			margin-left 0.3em

		&__link-progress
			display none

			.b-progress-icon
				b-progress-icon({color: #333, size: 0.6em})

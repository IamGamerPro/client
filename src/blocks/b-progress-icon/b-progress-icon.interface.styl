@import "../i-block/i-block.interface.styl"

$bProgressIcon = ()
declare($bProgressIcon, b-progress-icon)

if file-exists("b-progress-icon_*.styl")
	@import "b-progress-icon_*.styl"

b-progress-icon($p)
	$p = assign({
		size: 0.8em,
		color: #FFF
	}, $p)

	$size = $p.size
	$color = $p.color

	extends($iBlock)
	position relative

	&__loader,
	&__i
		width $size
		height $size
		border ($size / 4) solid rgba($color, 0.2)
		border-radius 50%

	&__i
		absolute top 0 left 0
		border-color transparent
		border-left-color $color
		transform translateZ(0)
		animation loader 1.1s infinite linear

	@keyframes loader
		from
			transform rotate(0)

		to
			transform rotate(360deg)


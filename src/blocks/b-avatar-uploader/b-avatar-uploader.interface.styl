@import "../b-window/b-window.interface.styl"

$bAvatarUploader = ()
declare($bAvatarUploader, b-avatar-uploader)

if file-exists("b-avatar-uploader_*.styl")
	@import "b-avatar-uploader_*.styl"

b-avatar-uploader($p)
	$p = assign({}, $p)

	+cache()
		extends($bWindow)

		&__window
			min-width 45em

		&__content
			text-align center

		&__desc
			padding 0.5em 1em
			font-size 0.9em

		&__action
			margin 0.7em 0
			text-align center

		&__editor
			display inline-block
			margin 1em 0.6em 0.6em 0.6em
			max-width 600px
			background #222
			vertical-align top

		&__thumbs
			display inline-block
			margin 1em 0.6em 0.6em 0.6em
			vertical-align top

		&__thumb
			display inline-block
			vertical-align top

			position relative
			overflow hidden
			margin-right 6px

			$bColor = #444
			border 3px solid $bColor
			background $bColor

			> img
				transform translateZ(0)
				absolute top 0 left 0

		for $el in (xxs 25) (xs 45) (s 65) (m 105)
			&__{$el[0]}
				min-width $el[1]px
				min-height $el[1]px
				width $el[1]px
				height $el[1]px

		&__s
			border-width 2px

		&__xs,
		&__xxs
			border-width 1px

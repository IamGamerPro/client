@import "../i-block/i-block.interface.styl"

$iMessage = ()
declare($iMessage, i-message)

if file-exists("i-message_*.styl")
	@import "i-message_*.styl"

i-message()
	+cache($params = {})
		extends($iBlock, $params)

		position relative
		display block

		&_show-error_true &__error,
		&_show-info_true &__info
			display inline-block
			opacity 1

		&_show-error_true &__info
			display none
			opacity 0

		&__message-box
			position absolute
			top 0
			right -0.4em
			z-index 10

			display none
			opacity 0
			cursor text

			transition opacity 0.2s
			color #444
			text-shadow none

		&__message-content
			position absolute
			top 0
			left 9px

			border 1px solid #FFF
			border-radius 0.3rem
			background-color #FFF
			box-shadow 1px 1px 5px rgba(#444, 0.4)

			color #111
			font normal 0.8rem "Helvetica Neue", Helvetica, Arial, sans-serif

			display block
			width 14rem
			min-height 1rem
			padding 0.7rem 0.5rem 0.8rem 0.5rem

		&__message-arrow
			position absolute
			top 0.25em
			left 0
			z-index 11

			background: url(fromSvg(
				'<svg x="0" y="0" width="10px" height="20px" viewBox="0 0 10 20">\
					<path fill="#FFF" stroke="#FFF" d="M0,10 L10,19 L10,1 L0,10Z"/>\
					<line stroke="#FFF" stroke-width="2" x1="10" y1="18" x2="10" y2="2"/>\
				</svg>'
			)) top left no-repeat;

			display block
			width 10px
			height 20px

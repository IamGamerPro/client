@import "../b-progress-icon/b-progress-icon.interface.styl"

declare(
	$bButton,
	b-button_theme_link
)

b-button_theme_link($params = {})
	$theme = _theme_link
	$color = $params.color || #CB9300

	+cache()
		&{$theme} &__button
			padding 0.25em 0.2em
			border 0
			background none
			color $color
			text-shadow none

		&{$theme}&_disabled_false&_progress_false &__button:hover
			background none
			color lighten($color, 20%)

		&{$theme}&_disabled_false&_progress_false &__button:active
			background none

		&{$theme}&_disabled_true &__root-wrapper
			opacity 0.5

		&{$theme}&_disabled_true &__button
			background none

		&{$theme} &__value
			border-bottom 1px solid $color

		&{$theme}&_disabled_false&_progress_false &__button:hover &__value
			border-bottom-color lighten($color, 20%)

		&{$theme}&_disabled_true &__value
			border-bottom-color darken($color, 40%)

		&{$theme} .b-progress-icon
			b-progress-icon({color: $color})

declare(
	$bButton,
	b-button_theme_dark-form
)

b-button_theme_dark-form($p)
	$p = assign({
		theme: _theme_dark-form,
		color: #000,
		gradColor1: #ACACAC,
		gradColor2: #888
	}, $p)

	$theme = $p.theme
	$color = $p.color
	$gradColor1 = $p.gradColor1
	$gradColor2 = $p.gradColor2

	&{$theme} &__button
		padding 0.25em 2em
		border-width 1px
		border-color lighten($color, 50%)
		background linear-gradient($gradColor1, $gradColor2)
		color $color
		text-shadow none

		&:hover
			background linear-gradient(lighten($gradColor1, 15%), lighten($gradColor2, 15%))

		&:active
			background linear-gradient($gradColor2, $gradColor1)

	&{$theme} &__wrapper
		transform scale(0.8)

	&{$theme}&_inverted-border_true &__button
		border-color invert($color)

declare(
	$bButton,
	b-button_theme_dark-form
)

b-button_theme_dark-form()
	+cache($params = {})

		$gradColor1 = $params.gradColor1 || #ACACAC
		$gradColor2 = $params.gradColor2 || #888

		&_theme_dark-form
			border-color #7C7C7D
			color #000
			text-shadow none

		&_theme_dark-form &__button
			padding 0.25em 2em
			border-width 1px
			background linear-gradient($gradColor1, $gradColor2)

		&_theme_dark-form&_disabled_false &__button:hover
			background linear-gradient(lighten($gradColor1, 15%), lighten($gradColor2, 15%))

		&_theme_dark-form&_disabled_false &__button:active
			background linear-gradient($gradColor2, $gradColor1)

		&_theme_dark-form &__wrapper
			transform scale(0.8)

		&_theme_dark-form&_inverse-border_true
			border-color #FFF

declare(
	$bButton,
	b-button_theme_dark
)

b-button_theme_dark($params = {})
	$theme = _theme_dark
	$color = $params.color || #252525
	$gradColor1 = $params.gradColor1 || #878787
	$gradColor2 = $params.gradColor2 || #989898
	$gradColor3 = $params.gradColor3 || #565656

	+cache()
		&{$theme} &__button
			background linear-gradient($gradColor1, $gradColor2 10%, $gradColor3)
			color $color
			text-shadow 1px 1px rgba(invert($color), 0.3)

		&{$theme}&_disabled_false&_progress_false &__button:hover
			background linear-gradient(lighten($gradColor1, 15%), lighten($gradColor2, 15%) 10%, lighten($gradColor3, 15%))

		&{$theme}&_disabled_false&_progress_false &__button:active
			background linear-gradient($gradColor3, $gradColor2 10%, $gradColor1)

		&{$theme}&_disabled_true &__button
			color lighten($color, 20%)

		&{$theme}&_inverse-border_true &__button
			border-color rgba(lighten($color, 20%), 0.6)

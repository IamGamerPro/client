declare(
	$bButton,
	b-button_theme_dark-link
)

b-button_theme_dark-link($p)
	$p = assign({
		theme: _theme_dark-link,
		color: #848484
	}, $p)

	$theme = $p.theme
	$color = $p.color

	&{$theme} &__button
		padding 0.25em 0.2em
		border 0
		background none
		color $color
		text-shadow none

		&:hover
			background none
			color lighten($color, 20%)

		&:active
			background none

	&{$theme}&_disabled_true &__root-wrapper
		opacity 0.5

	&{$theme}&_disabled_true &__button
		background none

	&{$theme} &__value
		border-bottom 1px solid $color

	&{$theme} &__button:hover &__value
		border-bottom-color lighten($color, 20%)

	&{$theme}&_disabled_true &__value
		border-bottom-color darken($color, 20%)

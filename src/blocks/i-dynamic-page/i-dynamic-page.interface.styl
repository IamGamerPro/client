@import "../i-data/i-data.interface.styl"

$iDynamicPage = ()
declare($iDynamicPage, i-dynamic-page)

if file-exists("i-dynamic-page_*.styl")
	@import "i-dynamic-page_*.styl"

i-dynamic-page($p)
	$p = assign({}, $p)
	extends($iData)

	&__root-wrapper
		display flex

	&__cell
		$d = 1..20

		for $el in $d
			&-p{$el}
				width $el * 5%

		for $el in $d
			&-m{$el}
				margin-right 0.5em
				width s("calc(%s * 5% - %s)", $el, @margin-right)

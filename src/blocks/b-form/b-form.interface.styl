@import "../i-block/i-block.interface.styl"

$bForm = ()
declare($bForm, b-form)

if file-exists("b-form_*.styl")
	@import "b-form_*.styl"

b-form()
	$p = assign({
		legendColor: #171717
	}, $p)

	$legendColor = $p.legendColor
	extends($iBlock)

	fieldset
		box-sizing border-box
		margin-bottom 0.5em
		padding 0.5em
		border 1px solid lighten($legendColor, 10%)
		border-radius 2px
		background-color $legendColor

		legend
			padding 0.2em
			border-radius 0.2em
			color #CCC
			font-size 0.8em

@import "nib/reset"

global-reset()
reset-html5()

html, body
	height 100%

html
	font-size 12px

	@media all and (min-width 1900px)
		font-size 14px

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0.2rem
	font-weight bold

h1
	font-size 1.8rem

h2
	font-size 1.6rem

h3
	font-size 1.4rem

h4
	font-size 1.2rem

h5
	font-size 1rem

h6
	font-size 0.8rem

p
	margin 0
	padding 0.4rem

a
	color #136796

	img
		border none

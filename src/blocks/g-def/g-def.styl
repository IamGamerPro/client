@import "nib/reset"

global-reset()
reset-html5()

html
	font-size 14px

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0.2rem
	font-weight bold

for $i in 1..6
	h{$i}
		font-size (2 - 0.2 * $i)rem

p
	margin 0
	padding 0.4rem

a
	color #136796

	img
		border 0

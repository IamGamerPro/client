@import "../i-data/i-data.interface.styl"

$iInput = ()
declare($iInput, i-input)

if file-exists("i-input_*.styl")
	@import "i-input_*.styl"

i-input()
	$p = assign({}, $p)

	+cache()
		extends($iData)

		&_show-error_true&_valid_true &__error,
		&_show-info_true&_valid_false &__info,
		&_show-info_true&_empty_false &__info
			display none
			opacity 0

		&_show-error_true&_valid_true&_empty_true &__info
			display inline-block
			opacity 1
